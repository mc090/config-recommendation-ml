{
  "name": "config-recommendation-ml",
  "build": {
    "dockerfile": "Dockerfile",
    "context": ".."
  },
  "forwardPorts": [
    8888
  ],
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "charliermarsh.ruff",
        "ms-toolsai.jupyter",
        "ms-azuretools.vscode-docker",
        "eamodio.gitlens",
        "tamasfe.even-better-toml"
      ]
    }
  },
  "postCreateCommand": "pip install -e . --root-user-action=ignore && pre-commit install",
  "runArgs": [
    "--gpus",
    "all"
  ]
}