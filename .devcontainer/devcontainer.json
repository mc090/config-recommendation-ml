{
  "name": "config-recomendation-ml",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "settings": {
    "python.pythonPath": ".venv/bin/python",
    "terminal.integrated.shell.linux": "/bin/bash",
    "python.defaultInterpreterPath": "/usr/local/bin/python"
  },
  "remoteUser": "vscode",
  "extensions": [
    "ms-python.python",
    "ms-python.vscode-pylance",
    "charliermarsh.ruff",
    "ms-toolsai.jupyter",
    "ms-azuretools.vscode-docker",
    "eamodio.gitlens", 
    
  ],
  "mounts": [
    "source=${localWorkspaceFolder}/.venv,target=/workspaces/config-recommendation-ml/.venv,type=bind"
  ],
  "forwardPorts": [8888],
  "postCreateCommand": "pip install --upgrade pip && pip install .",
  "mounts": [
    "source=${localWorkspaceFolder}/data,target=/workspace/data,type=bind"
  ],
  "runArgs": ["--gpus", "all"],
}
